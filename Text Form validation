    <form action="new" name="myForm" onsubmit="return formValidation()">
        <label for="fname">firstName</label>
        <input type="text" id="fname" name="form">
        <input type="submit" value="submit">
    </form>

<script>
    function formValidation() {
        const x = document.forms["myForm"]["form"].value;
        if (x==""){
            alert("fill it")
            return false
        }
    }
</script>
